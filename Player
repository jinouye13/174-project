            {
            	for (int i = 0; i < 5; i++)
		{
                    
                    hand[i]=hand[i];
                }
             }
	return hand;
                
                
	}
	
	//What does this below do?
	
	public String toString()
	{
		String deckString = "";
		
        	for (int cards = 0; cards < 5; cards++)
        	{
            		deckString = deckString + hand[cards] + "\n";
        	}
        
        	return deckString;
	}
