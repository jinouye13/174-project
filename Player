	public Card[] deal()
	{
                Card[] numb = new Card[5];
		for (int i = 0; i < hand.length; i++)
		{
                    int index = (int)(Math.random() * deck.length);
			hand[i] = deck[index];
                        System.out.println(hand[i]);
                }
            	Scanner input = new Scanner (System.in);
            	System.out.println("Enter 9 if you want to discard cards");
            	int reply = input.nextInt();
            	if(reply==9){
            	System.out.println("If you want to discard cards, how many do you want to discard");
            	int reply2=input.nextInt();
      
      		//Can you explain what the for loop below is doing? Is it replacing the cards they cose to discard?
      
            	System.out.println("Which ones do you want to discard?");
